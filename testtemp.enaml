def get_tag(name, base, tag, none_value=None):
    try:    
        return base.get_tag(name, tag, none_value)
    except AttributeError:
        return none_value

template TypedView(name, base, baseType):
    """ This default specialization displays read-only text for the value."""
    Field:
        read_only = True
        text << unicode(getattr(base, name))

template TypedView(name, base, baseType: Read_File):
    """ Displays a read file interface"""
    ReadWrap:
        filer:=getattr(base, name)

template TypedView(name, base, baseType: Save_File):
    """Displays a save file interface"""
    SaveWrap:
        filer:=getattr(base, name)
        
template TypedView(name, base, baseType: Polyer):
    """Displays a polyer polygon list interface. very ineffecient. too many notifications"""
    EBContWrap:
        polyer:=getattr(base, name)

        
template TypedView(name, model, modelType: Typed):
    TypedView(name, model, type(getattr(model, name))):
        pass

template TypedView(name, model, modelType: Instance):
    TypedView(name, model, type(getattr(model, name))):
        pass

template TypedView(name, model, modelType: Coerced):
    TypedView(name, model, type(getattr(model, name))):
        pass

template TypedView(name, base, baseType: Float):
    """ A template for Float members"""
    FloatField:
        value :=  getattr(base, name)
        minimum=get_tag(name, base, 'low')
        maximum=get_tag(name, base, 'high')

template TypedView(name, base, baseType: float):
    """ A template for floats"""
    FloatField:
        value :=  getattr(base, name)
        minimum=get_tag(name, base, 'low')
        maximum=get_tag(name, base, 'high')

template TypedView(name, base, baseType: Range):
    """ A template for Range members"""
    Container:
        constraints=[hbox(sel, min_lbl, sel_slider, max_lbl)]
        SpinBox: sel:
            value:=getattr(base, name)
            minimum = sel_slider.minimum
            maximum = sel_slider.maximum
        Slider: sel_slider:
            minimum = base.get_member(name).validate_mode[1][0]
            maximum = base.get_member(name).validate_mode[1][1]
            value :=getattr(base, name)
            tracking = False
        Label: min_lbl:
                text << str(sel_slider.minimum)
        Label: max_lbl:
            text << str(sel_slider.maximum)

